<h1>Edit Reservation</h1>

<%= form_for @reservation do |f| %>
  <%=f.hidden_field :user_id, value: @current_user.id %><br><br>

  <%=f.label :item_name %><br>
  <%=f.collection_select :item_id, Item.all, :id, :name_with_price %><br><br>

  <%=f.label :start_date %><br>
  <%=f.date_field :start_date %><br><br>

  <%=f.label :end_date %><br>
  <%=f.date_field :end_date %><br><br>

  <%=f.submit %>
<% end %>
