<div class="clearnav navbar navbar-default">
  <ul class="nav navbar-nav">
    <h1>Book a New Reservation</h1>
  </ul>
</div>

<%= form_for @reservation do |f| %>
  <%=f.hidden_field :user_id, value: @current_user.id %>

  <%=f.label :item_name %><br>
  <%=f.collection_select :item_id, Item.all, :id, :name_with_price_location, class: "form-control" %><br><br>

  <%=f.label :start_date %><br>
  <%=f.date_field :start_date, class: "form-control" %><br><br>

  <%=f.label :end_date %><br>
  <%=f.date_field :end_date, class: "form-control" %><br><br>


  <%=f.submit "Book It!", class: "btn btn-primary" %>
<% end %>
