<h1>New Reservation</h1>

<%= form_for @reservation do |f| %>
  <%=f.label :user_name %><br>
  <%=f.collection_select :user_id, User.all, :id, :name %><br><br>

  <%=f.label :item_name %><br>
  <%=f.collection_select :item_id, Item.all, :id, :name_with_price %><br><br>

  <%=f.label :start_date %><br>
  <%=f.date_field :start_date %><br><br>

  <%=f.label :end_date %><br>
  <%=f.date_field :end_date %><br><br>

  <%=f.label :total_cost %><br>
  <%=f.text_field :total_cost %><br><br>

  <%=f.submit %>
<% end %>
