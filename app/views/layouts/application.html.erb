<!DOCTYPE html>
<html>
  <head>
    <title>Toolshare</title>
    <%= csrf_meta_tags %>

<!-- external stylesheets -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<!-- fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Bungee" rel="stylesheet">

<!-- exising stylesheets - including /assets/stylesheets/application.css -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="navbar navbar-default navbar-fixed-top" style="border-bottom: 2px solid rgb(98,151,176)">
      <div class="navbar-header">
        <a class="navbar-brand" href="../" style="font-size: 20px; font-family: bungee; color: rgb(98,151,176)">ToolShare</a>
      </div>
      <ul class="nav navbar-nav">
        <li><%= link_to "Welcome", root_path %></li>
        <li><%= link_to "Tools", items_path %></li>
        <li><%= link_to "Locations", locations_path %></li>
        <li><%= link_to "Make a Reservation", new_reservation_path %></li>
      </ul>

      <div class="nav nav-pills pull-right">
        <% if logged_in? %>
          <%= link_to "Sign Out", signout_path, method: :delete, class: "btn btn-default", style: "margin-top: 3px; margin-right: 5px"  %>
          <%= link_to image_tag("#{current_user.image_url}", :size=> '45x45', style: 'border-radius: 100px; margin: 5px 10px 5px 5px'), current_user%>

        <% else %>
          <%= link_to "Sign In/ Sign Up", signin_path, class: "btn btn-default", style: "margin-top: 8px; margin-right: 5px" %>
        <% end %>
      </div>
    </div>








    <div class="container">
      <% flash.each do |key, value| %>
      <h3 style="margin-top: 75px; text-align: right; color: lightgray"><%= value %></h3>
      <% end %>
      <div class="content">

        <%= yield %>

      </div>
    </div>

  </body>
</html>
