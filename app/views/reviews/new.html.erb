<h1>Review for <%=@review.reservation.item.name %></h1>

<%=form_for @review do |f| %>
  <%f.hidden_field :user_id, value: @review.reservation.user_id %>
  <%f.hidden_field :reservation_id %>

  <%=f.label :rating %><br>
  <%=f.number_field :rating %><br><br>

  <%=f.label :content %><br>
  <%=f.text_area :content %><br><br>

  <%=f.submit %>
<% end %>
