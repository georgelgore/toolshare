<h1>New User Form</h1>


<%= form_for @user do |f| %>
<%= f.label :email %>
<%= f.text_field :email %><br>
<%= f.label :password %>
<%= f.text_field :password %>
<%= f.label :password_confirmation %>
<%= f.text_field :password_confirmation %><br>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :location %>
<%= f.collection_select :location_id, Location.all, :id, :name %><br>
<%= f.submit %>
<% end %>
