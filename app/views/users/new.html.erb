<h2>Sign Up</h2><br>


<%= form_for @user do |f| %>
<%= f.label :email %><br>
<%= f.text_field :email %><br><br>
<%= f.label :password %><br>
<%= f.text_field :password %><br><br>
<%= f.label :password_confirmation %><br>
<%= f.text_field :password_confirmation %><br><br>
<%= f.label :name %><br>
<%= f.text_field :name %><br><br>
<%= f.label :location %><br>
<%= f.collection_select :location_id, Location.all, :id, :name %><br><br><br>
<%= f.submit 'Sign Up', :class=> "btn btn-primary" %>
<% end %><br><br>

<h4><a href="../signin">Already a User? Sign In Here</a></h4>
