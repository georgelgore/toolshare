<h1>Our Locations</h1>

<div class="row" style="margin-bottom: 50px">

  <% @locations.each do |location| %>
    <div class="col-sm-4">
      <div class="card" style="width: 20rem; margin: 40px 0">
        <div class="card-block">
          <div class="card-img-top"/> <%= image_tag("maps/manhattan.png", :size=> '300x200') %> </div>
          <div class="card-block">
            <h4 class="card-title"><%= link_to location.name, location_path(location) %></h4>
            <p class="card-text">11 Broadway <br> New York, NY 10004</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </div>
    </div>

  <% end %>

</div>
